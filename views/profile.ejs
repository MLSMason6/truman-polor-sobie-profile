<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Mason Sobie Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">

    <h2 class="mb-3">Blog Posts</h2>

    <!-- Insert Form -->
    <form method="POST" action="/insert" class="mb-3">
        <div class="mb-2">
            <input class="form-control" name="title" placeholder="Title" required>
        </div>
        <div class="mb-2">
            <input class="form-control" name="post" placeholder="Post Content" required>
        </div>
        <button class="btn btn-primary" type="submit">New Post</button>
    </form>

    <% profileData.forEach(result => { %>
        <div class="card mb-3 p-3">
            <form method="POST" action="/update">
                <div class="mb-2">
                    <input class="form-control" name="updateTitle" value="<%= result.title %>" required>
                </div>
                <div class="mb-2">
                    <input class="form-control" name="updatePost" value="<%= result.post %>" required>
                </div>
                <input type="hidden" name="updateId" value="<%= result._id %>">
                <button class="btn btn-warning" type="submit">Update</button>
            </form>

            <form method="POST" action="/delete" class="mt-2">
                <input type="hidden" name="deleteId" value="<%= result._id %>">
                <button class="btn btn-danger" type="submit">Delete</button>
            </form>
        </div>
    <% }); %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
